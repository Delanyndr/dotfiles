#!/bin/sh

options="\
lockscreen
logout
refresh dwm
reboot
shutdown"

choice="$(echo "$options" | dmenu | cut -f 1 -d ' ')" || exit 1

case $choice in
    lockscreen)
        lockscreen
        ;;
    logout)
        kill -TERM $(pidof s dwm)
        ;;
    refresh)
        kill -HUP $(pidof s dwm)
        ;;
    reboot)
        reboot
        ;;
    shutdown)
        poweroff
        ;;
esac
